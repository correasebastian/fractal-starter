<section class="tcs-cards-features tcs-px tcs-px-lg-4 tcs-mb-3">
    <div class="bg-lb-50 tcs-px-2">
        {{!-- <div class="embed-responsive embed-responsive-16by9"> --}}
           {{!-- <div class="tcs-embed-fill d-flex flex-column justify-content-center"> --}}
        <div class="row">
            <div class="col-12 col-lg-3">
            <div class=" position-relative tcs-py-3">
                <img class="tcs-cards-features__logo position-absolute img-fluid" src="https://res.cloudinary.com/dg1knuetg/image/upload/v1598650527/TCSSeal-SmallScalePositive_di4zva.png" alt="" srcset="">
                <h2 class="fc-blue fs-40 position-relative">
                    Fill Power  
                </h2>
            </div>
            </div>
            <div class="col-12 col-lg-9">
                <div class="tcs-cards-features__cards-container row">

                    {{#each cards}}
                    
                        <div class="tcs-cards-features__card tcs-py col-12 col-lg-4">
                            <h3 class="tcs-cards-features__card-title fs-40 fc-lb-30 text-uppercase">
                                {{title}}
                            </h3>

                            <hr>

                            <h4 class="fs-16 fc-blue">
                                {{subtitle1}}
                            </h4>

                            <p class="fs-14 ff-lr flh-1p5">
                                {{p1}}
                            </p>

                            <h5 class="fc-blue-2 fs-14">
                                {{subtitle2}}
                            </h5>

                            <p class="fs-14 ff-lr flh-1p5">
                                {{p2}}
                            </p>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>

    </div>

</section>