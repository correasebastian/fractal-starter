<section class="tcs-cards-features tcs-px">
    <div class="bg-lb-50 tcs-px-2">
        <div class="embed-responsive embed-responsive-16by9">
           <div class="tcs-embed-fill d-flex flex-column justify-content-center">
            <h2 class="fc-blue fs-40">
                Fill Power  
            </h2>
           </div>
        </div>

        <div class="tcs-cards-features__cards-container">

            {{#each cards}}
            
                <div class="tcs-cards-features__card tcs-py">
                    <h3 class="tcs-cards-features__card-title fs-46 fc-lb-30">
                        {{title}}
                    </h3>

                    <hr>

                    <h4 class="fs-16 fc-blue">
                        {{subtitle1}}
                    </h4>

                    <p class="fs-14 ff-lr flh-1p5">
                        {{p1}}
                    </p>

                    <h5 class="fc-blue-2 fs-14">
                        {{subtitle2}}
                    </h5>

                    <p class="fs-14 ff-lr flh-1p5">
                        {{p2}}
                    </p>
                </div>
            {{/each}}
        </div>
    </div>

</section>